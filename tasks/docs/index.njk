{%- extends 'layout/default.njk' %}

{%- block body %}

{% macro renderTree(tree) %}
    <ul>
    {% for item in tree %}
        <li>
        {% if item.url %}
            <a href="{{ item.url }}">{{ item.name | capitalize }}</a>
        {% else %}
            <span>{{ item.name | capitalize }}</span>
        {% endif %}

        {% if item.branches %}
            {{ renderTree(item.branches) }}
        {% endif %}
        </li>
    {% endfor %}
    </ul>
{% endmacro %}

<div class="container">

    <h1>Front-End Library</h1>
        <p>Last updated: {{ lastUpdated }}</p>
        <!--[[dist.zip]]-->

        <div class="parts-preview-list">
            <div>
                <h2>Atoms</h2>
                {{ renderTree(atoms) }}
            </div>

            <div>
                <h2>Molecule</h2>
                {{ renderTree(molecule) }}
            </div>

            <div>
                <h2>Organism</h2>
                {{ renderTree(organism) }}
            </div>

            <div>
                <h2>Templates</h2>
                {{ renderTree(templates) }}
            </div>
        </div>

</div>

{%- endblock %}
